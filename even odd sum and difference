//odd sum and even sum of n numbers
#include<stdio.h>
main()
{
	int n,i;
	int odsm=0,evsm=0;
	scanf("%d",&n);
	i=1;
	while(i<=n)
	{
		if(i%2==0)
		{
			evsm=evsm+i;
		}
		else
		{
			odsm=odsm+i;
		}
		i++;
	}
	printf("Odd sum is %d\n",odsm);
	printf("even sum is %d\n",evsm);
	printf("Difference is %d\n",(evsm-odsm));
}
